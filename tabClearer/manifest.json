{
    "manifest_version": 2,
  
    "name": "tabClearer plugin",
    "description": "This extension clears non locked tabs on click",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "images/unlocked.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "tabs",
     "storage"
     ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "js": ["visualLockUnlock.js"],
        "matches": ["http://*/*", "https://*/*"]
  }]
}
  